{
  "version": 2,
  "name": "fringe-booking-system",
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://fringe-obs-git-main-zeskys-projects.vercel.app/api",
    "REACT_APP_FRONTEND_URL": "https://fringe-obs-git-main-zeskys-projects.vercel.app"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    }
  ],
  "buildCommand": "cd fringe-client && REACT_APP_API_URL=https://fringe-obs-git-main-zeskys-projects.vercel.app/api npm run vercel-build",
  "outputDirectory": "fringe-client/build",
  "installCommand": "npm install && cd fringe-client && npm install --legacy-peer-deps && cd ../fringe-backend && npm install"
} 